+		error = errno;
+		ERR(policy, "%s", strerror(error));
+		goto err;
+	}
+
+	if (apol_str_appendf(&tmp, &tmp_sz, ";")) {
+		error = errno;
+		ERR(policy, "%s", strerror(error));
+		goto err;
+	}
+	return tmp;
+
+      err:
